<Window x:Class="Prakt_5Lab.MaterialWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prakt_5Lab"
        mc:Ignorable="d"
        Title="MaterialWIndow" Height="450" Width="800"
        Loaded="Window_Loaded"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="Back" Content="Назад" Click="Back_Click"></Button>
        <DataGrid x:Name="MaterialGrid" Grid.Row="1" IsReadOnly="True"></DataGrid>
        <TextBox x:Name="materialNameArea" materialDesign:HintAssist.Hint="Название Материала"  Grid.Row="2"></TextBox>
        <Button x:Name="Add" Grid.Row="3" Content="добавить" Click="Add_Click"></Button>
    </Grid>
</Window>
